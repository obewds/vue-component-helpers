{
  "name": "@obewds/vue-component-helpers",
  "description": "The @obewds/vue-component-helpers modular design system component for Vue.js",
  "version": "1.0.0",
  "author": "@oberocks",
  "homepage": "https://obewds.github.io/vue-component-helpers/",
  "license": "MIT",
  "main": "./dist/vue-component-helpers.umd.js",
  "module": "./dist/vue-component-helpers.es.js",
  "browser": "./dist/vue-component-helpers.iife.js",
  "exports": {
    ".": {
      "import": "./dist/vue-component-helpers.es.js",
      "require": "./dist/vue-component-helpers.umd.js"
    }
  },
  "files": [
    "dist",
    "src/components",
    "tests"
  ],
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "tsbuild": "npx rimraf dist && vite build && vue-tsc --emitDeclarationOnly && mv dist/src dist/types",
    "preview": "vite preview",
    "test": "vitest --dom",
    "coverage": "vitest run --dom --coverage",
    "docs:dev": "vitepress dev docs --port 8080",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port 8080",
    "pkg:tsbundle": "npm run tsbuild && npm run docs:build && node scripts/cleanup.js",
    "pkg:org": "npm config set scope obewds",
    "pkg:login": "npm adduser",
    "pkg:publish": "npm publish --access public",
    "changelog": "auto-changelog --package --unreleased --backfill-limit 20",
    "git:tag": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "publish:prep": "npx rimraf dist && npm run pkg:tsbundle",
    "publish:package": "npm run publish:prep && npm run pkg:org && npm run pkg:login && npm run pkg:publish && npm run git:tag && npm run changelog"
  },
  "dependencies": {
    "@obewds/obewds-tw-config": "^1.0.1",
    "@obewds/vue-validators": "^1.0.0",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.3",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^18.0.3",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "^2.0.2",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "fs-extra": "^10.1.0",
    "happy-dom": "^6.0.2",
    "lodash": "^4.17.21",
    "postcss": "^8.4.14",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vitepress": "^1.0.0-alpha.4",
    "vitest": "^0.20.2",
    "vue": "^3.2.37",
    "vue-tsc": "^0.38.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obewds/vue-component-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/obewds/vue-component-helpers/issues"
  },
  "keywords": [
    "vue",
    "vite",
    "OBE:WDS",
    "tailwindcss",
    "rollup",
    "vitepress",
    "postcss",
    "vue3",
    "Vue.js",
    "Tailwind CSS"
  ]
}
